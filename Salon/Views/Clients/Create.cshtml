@{
  Layout = "_Layout";
}

@model Salon.Models.Client

<h4>Add a new task</h4>

<p><strong>NOTE:</strong> You'll need at least one stylist in the system before you can add a client</p>
<p>Go to @Html.ActionLink("this page", "Create", "Stylists") to add a stylist.</p>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")
    <input type="submit" value="Add client" class="btn btn-primary" />
}
<p>@Html.ActionLink("Show all clients", "Index")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>